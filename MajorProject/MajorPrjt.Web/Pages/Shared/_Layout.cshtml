<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MajorPrjt.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("MyView", required: false)
</head>
<body>
    <header style="background-color:#FC5E28;">
        <nav style="background-color:#FC5E28;" class="navbar navbar-expand-sm navbar-toggleable-sm  border-bottom box-shadow mb-3">
            <div style="background-color:#FC5E28;" class="container">
                <a class="navbar-brand " asp-area="" asp-page="/Index" ><img src="~/images/site-logo (2).png" style="width:280px;height:70px" ></a>
               
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item ">
                            <a class="nav-link text-light" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-light" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        
                        <li class="nav-item dropdown ">
                            <a class="nav-link dropdown-toggle text-light" data-toggle="dropdown" href="#">Manage</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" 
                                   asp-area="user" asp-controller="Home" asp-action="Index">Ask a Question</a>
                                <a class="dropdown-item"
                                   asp-area="user" asp-controller="Forum" asp-action="Index">Explore Recent Questions</a>  
                            </div>
                        </li>
                        <li class="nav-item dropdown ">
                            <a class="nav-link dropdown-toggle text-light" data-toggle="dropdown" href="#">Admin Panel</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" 
                                   asp-area="DForum" asp-controller="Categories" asp-action="AdminView">Categories</a>
                                <a class="dropdown-item"
                                   asp-area="DForum" asp-controller="Topics" asp-action="AdminView">Questions</a>
                                <a class="dropdown-item"
                                   asp-area="DForum" asp-controller="Comments" asp-action="AdminView">Comments</a>
                                   <a class="dropdown-item"
                                   asp-area="DForum" asp-controller="Replies" asp-action="AdminView">Replies</a>
                            </div>
                        </li>
                        <li class="nav-item text-light">
                            <a class="nav-link text-light" href="/swagger">API Documentation</a>
                        </li>
                    </ul>
                </div>
            </div>
            <partial name="_LoginPartial.cshtml"/>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Discussion Forum - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
