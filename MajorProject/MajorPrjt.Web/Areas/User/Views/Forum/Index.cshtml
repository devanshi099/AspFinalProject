@model IEnumerable<MajorPrjt.Web.Areas.User.ViewModels.CompleteForumView>
@{
    ViewBag.Title = "Common View";
}

<h1>Index</h1>

<p>Search Anything</p>
<input class="form-control" id="myInput" type="text" placeholder="Search...">
<br>

<table class="table">
    <thead>
        <tr>
            <th>Questions</th>
            <th>Comments</th>
            <th>Replies</th>
        </tr>
    </thead>
    <tbody id="myTable">
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @item.Topics.Description
                </td>
                <td>
                    @item.Comments.CommentDescription
                </td>
                <td>
                    @item.Replies.ReplyDescription
                </td>

            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function() {
        $("#myInput").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function() {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>