@model IEnumerable<MajorPrjt.Web.Models.Category>
<link href='https://fonts.googleapis.com/css?family=Yesteryear' rel='stylesheet'>
@{
    ViewData["Title"] = "Available Categories";
}
<h1></h1>
<center><h3 style="color:#F1F114">@ViewData["Title"]</h3></center>
<hr />

<center><h5>Couldn't find what you are looking for?</h5>
<p>
    <b><a asp-area="DForum" asp-controller="Categories" asp-action="Create" class="btn btn-outline-warning" >Add New Category</a></b>
</p></center>
<div class="card-columns mt-3">
    @foreach (var item in Model) {
            
                <div class="card" >
                        <div style="font-size:20px;" class="card-body text-center  pt-0 pb-0  font-weight-bold">
                            <div class="card-title font-weight-bolder"> @Html.DisplayFor(modelItem => item.CategoryName) </div>
                            @*<div class="card-text text-danger font-weight-bolder"> </div>
                            <div class="card-text font-italic">  </div>*@
                        </div>
                        <div class="card-footer mt-0 text-center">
                            <button class="btn btn-sm btn-success" type="submit"><a class="text-light font-weight-bold " asp-action="Details" asp-route-id="@item.CategoryId">Details</a></button>
                            <button class="btn btn-sm btn-success" type="submit"><a class="text-light font-weight-bold " asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a></button>
                           @* <button class="btn btn-sm btn-primary " style="width:100px; height:32px" ><a class="text-light" asp-area="Manage" asp-controller="OrderDetails" asp-action="Create">Order Now</a>
                            </button>*@
                            <button class="btn btn-sm btn-danger font-weight-bold" type="submit">Cancel</button>
                        </div>
                </div>
    }
</div>
 

@section MyView {
    <style>
        h3 {
            font-family: 'Yesteryear';
            font-size: 2.5rem;
            /*font-weight: bold;*/
        }
        h5{
            color:white;
        }
    </style>
}
