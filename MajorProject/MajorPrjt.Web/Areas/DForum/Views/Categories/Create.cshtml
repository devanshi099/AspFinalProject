@model MajorPrjt.Web.Models.Category

@{
    ViewData["Title"] = "Add a New Category";
}

<h1></h1>
<center><h2 style="color:#DC143C">@ViewData["Title"]</h2></center>
<hr />

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group text-center font-weight-bold">
                <span><label asp-for="CategoryName" class="control-label "></label>
                <input asp-for="CategoryName" class="form-control" /></span>
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            
            <div class="form-group text-center">
                <input type="submit" value="Submit" class="btn btn-primary" />
                <b><a style="color:white;" asp-action="Index" class="btn btn-danger" >View Existing Categories</a></b>
            </div>
        </form>

    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
