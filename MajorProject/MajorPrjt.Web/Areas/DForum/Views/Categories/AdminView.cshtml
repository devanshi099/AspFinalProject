@model IEnumerable<MajorPrjt.Web.Models.Category>
@{
    ViewData["Title"] = "Existing Categories";
}
<style>
    p a{
        color:gold;
    }
</style>
<h1></h1>
<br />
<center><h3 style="color:#DC143C">@ViewData["Title"]</h3>

<p>
    
    <b><a  asp-action="Create" class="btn btn-outline-warning" >Add New Category</a></b>
 
</p>
</center>
<table class="table table-striped table-bordered table-hover table-warning text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayName("Navigation Link's")
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <i>@Html.DisplayFor(modelItem => item.CategoryName)</i>
            </td>
            <td >
                <b><a style="color:red;" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |</b>
                <b><a style="color:red;" asp-action="Details" asp-route-id="@item.CategoryId">Details</a> | </b>
                <b><a style="color:red;" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a></b>
            </td>
        </tr>
}
    </tbody>
</table>






