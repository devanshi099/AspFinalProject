@model MajorPrjt.Web.Models.Category

@{
    ViewData["Title"] = "Edit Category Details";
}

<h1></h1>
<center><h2 style="color:#DC143C">@ViewData["Title"]</h2>
<hr />
<hr />
<div class="row text-light justify-content-center">
    <div class="col-md-4 ">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label font-weight-bold"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <input type="submit" value="Save" class="btn btn-success" /> |
                <b><a style="color:white;" asp-action="Index" class="btn btn-primary" >Back To Categories</a></b>
            </div>
        </form>
    </div>

</div></center>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
