@model MajorPrjt.Web.Models.Comment

@{
    ViewData["Title"] = "Comment Details";
}

<h1></h1>
<center><h2 style="color:#DC143C">@ViewData["Title"]</h2></center>
<hr />

<div>
    <dl class="row text-light border">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Topic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Topic.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CommentDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CommentDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CommentDateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CommentDateTime)
        </dd>
        
    </dl>
</div>

<div class="text-center"> 
    <b><a asp-action="Edit" asp-route-id="@Model.CommentId" class="btn btn-warning" >Edit Details</a></b>|
    <b><a style="color:white;" asp-action="Index" class="btn btn-danger" >View All Comments</a></b>
</div>
