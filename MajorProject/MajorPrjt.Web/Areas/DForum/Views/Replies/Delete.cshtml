@model MajorPrjt.Web.Models.Reply

@{
    ViewData["Title"] = "Are you sure you want to delete this?";
}

<h1></h1>
<center><h2 style="color:#DC143C">@ViewData["Title"]</h2></center>
<hr />
<div>

    <hr />
    <dl class="row text-light border">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comment.CommentDescription)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReplyDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReplyDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReplyDateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReplyDateTime)
        </dd>
        
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ReplyId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <b><a style="color:white;" asp-action="Index" class="btn btn-primary" >View all Replies </a></b>
    </form>
</div>
